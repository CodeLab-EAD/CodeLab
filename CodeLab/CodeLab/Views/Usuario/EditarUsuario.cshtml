@model CodeLab.Models.UsuarioModel

@{
    ViewData["Title"] = "Editar Usuário";
}

<style>
    body {
        font-family: 'Roboto', 'Segoe UI', Arial, sans-serif;
        background: linear-gradient(135deg, #1f1c2c, #928dab);
        color: #f0f0f0;
        min-height: 100vh;
        margin: 0;
        padding: 0;
    }

    .container {
        max-width: 650px;
        margin: 60px auto;
        padding: 32px;
        background: rgba(30, 30, 60, 0.95);
        border-radius: 15px;
        box-shadow: 0 8px 25px rgba(0,0,0,0.5);
    }

    h1 {
        text-align: center;
        font-size: 28px;
        margin-bottom: 28px;
        color: #ffdd57;
        text-shadow: 0 2px 6px rgba(0,0,0,0.6);
    }

    form {
        display: block;
    }

    label {
        display: block;
        margin-bottom: 6px;
        font-weight: 600;
        color: #fff;
    }

    input[type="text"],
    input[type="password"],
    input[type="email"],
    select {
        width: 100%;
        padding: 10px 12px;
        border: 1px solid rgba(255,255,255,0.2);
        border-radius: 8px;
        font-size: 15px;
        background-color: rgba(255,255,255,0.05);
        color: #fff;
        box-sizing: border-box;
        transition: all 0.3s ease;
    }

        input:focus, select:focus {
            border-color: #6a11cb;
            box-shadow: 0 0 6px #6a11cb;
            outline: none;
        }

    .form-group {
        margin-bottom: 20px;
    }

    .validation-message {
        color: #ff6a6a;
        font-size: 13px;
        margin-top: 5px;
        display: block;
    }

    .actions {
        display: flex;
        gap: 10px;
        align-items: center;
        flex-wrap: wrap;
        justify-content: center;
        margin-top: 20px;
    }

    .btn-primary {
        padding: 10px 18px;
        border: none;
        border-radius: 10px;
        background: linear-gradient(90deg, #6a11cb, #2575fc);
        color: #fff;
        font-weight: 600;
        cursor: pointer;
        transition: transform 0.3s, background 0.3s;
    }

        .btn-primary:hover {
            transform: scale(1.05);
            background: linear-gradient(90deg, #2575fc, #6a11cb);
        }

    .btn-secondary {
        padding: 10px 18px;
        border-radius: 10px;
        border: 1px solid rgba(255,255,255,0.3);
        color: #fff;
        text-decoration: none;
        background: rgba(255,255,255,0.1);
        font-weight: 500;
        transition: all 0.3s;
    }

        .btn-secondary:hover {
            background: rgba(255,255,255,0.2);
            transform: scale(1.05);
        }

    .hint {
        text-align: center;
        width: 100%;
        color: #ccc;
        font-size: 13px;
        margin-top: 10px;
    }
</style>

<div class="container">
    <h1>Editar Usuário</h1>

    <form asp-action="EditarUsuario" method="post">
        @Html.AntiForgeryToken()

        <input asp-for="IdUsuario" type="hidden" />

        <div class="form-group">
            <label asp-for="NomeUsuario">Nome</label>
            <input asp-for="NomeUsuario" placeholder="Ex: Júlio" />
            <span asp-validation-for="NomeUsuario" class="validation-message"></span>
        </div>

        <div class="form-group">
            <label asp-for="Senha">Senha</label>
            <input asp-for="Senha" type="password" placeholder="abcd123" />
            <span asp-validation-for="Senha" class="validation-message"></span>
        </div>

        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" type="email" placeholder="usuario@gmail.com" />
            <span asp-validation-for="Email" class="validation-message"></span>
        </div>

        <div class="form-group">
            <label asp-for="NivelAcesso">Nível de Acesso</label>
            <select asp-for="NivelAcesso" class="form-control">
                <option value="">-- Selecione --</option>
                <option value="Admin">Admin</option>
                <option value="Gerente">Gerente</option>
                <option value="Comum">Comum</option>
            </select>
            <span asp-validation-for="NivelAcesso" class="validation-message"></span>
        </div>

        <div class="actions">
            <button type="submit" class="btn-primary">Salvar</button>
            <a asp-action="Index" class="btn-secondary">Voltar</a>
            <div class="hint">💡 Dica: preencha todos os campos obrigatórios.</div>
        </div>
    </form>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
}
